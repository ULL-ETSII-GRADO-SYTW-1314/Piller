<% provide(:title, "Acceder") %>
<h1>Acceder</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(:session, url: sessions_path) do |f| %>

      <%= f.label :email%>
      <%= f.text_field :email, :placeholder => "Introduce tu Email" %>

      <%= f.label :password%>
      <%= f.password_field :password, :placeholder => "Introduce tu Contraseña" %>

      <%= f.submit "Entrar", class: "btn btn-large btn-primary" %>
    <% end %>

    <p>¿No estás registrado? <%= link_to "Regístrate", signup_path %></p>
  </div>
</div>