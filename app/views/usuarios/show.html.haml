- provide(:title, @usuario.name)
.row
  %aside.span4
    %section
      %h1
        = gravatar_for @usuario
        = @usuario.name
    %section
      = render 'shared/stats'
    %section
      = render 'follow_form' if signed_in?
  .span4
    - if @usuario.microvideos.any?
      %h3
        Pillers (#{@usuario.microvideos.count})
      %ol.microposts
        = render @microvideos
      = will_paginate @microvideos