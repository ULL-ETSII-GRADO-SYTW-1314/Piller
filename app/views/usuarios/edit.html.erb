<% provide(:title, "Edit usuario") %>
<h1>Configura tu perfil/h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@usuario) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name, :placeholder =>"Introduce tu Nombre"%>
      <%= f.text_field :name, :placeholder =>"Introduce tu Nombre" %>

      <%= f.label :email, :placeholder =>"Introduce tu Email" %>
      <%= f.text_field :email, :placeholder =>"Introduce tu Email" %>

      <%= f.label :password, :placeholder =>"Introduce una ContraseÃ±a" %>
      <%= f.password_field :password, :placeholder =>"Introduce tu ContraseÃ±a"%>

      <%= f.label :password_confirmation, "Confirm Password" %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit "Guardar Cambios", class: "btn btn-large btn-primary" %>
    <% end %>

    <%= gravatar_for @usuario %>
    <a href="http://gravatar.com/emails">Cambiar</a>
  </div>
</div>